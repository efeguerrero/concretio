---
import bakuCover from '../../../public/assets/images/proyectos/baku/bakuCover.jpg';
import pragaCover from '../../../public/assets/images/proyectos/praga/pragaCover.jpg';
---

<ul class="gallery">
  <li style=""><img src={bakuCover} alt="Portada Proyecto Baku" /></li>
  <li style=""><img src={pragaCover} alt="Portada Proyecto Praga" /></li>
  <li style=""><img src={bakuCover} alt="Portada Proyecto Baku" /></li>
  <li style=""><img src={pragaCover} alt="Portada Proyecto Praga" /></li>
</ul>

<style>
  .gallery {
    padding: 1rem;
    display: grid;
    grid-template-columns: repeat(10, 80vw);
    grid-template-rows: 1fr;
    grid-column-gap: 1rem;
    grid-row-gap: 1rem;
    overflow: scroll;
    height: auto;
    scroll-snap-type: both mandatory;
    scroll-padding: 1rem;
  }

  .active {
    scroll-snap-type: unset;
  }

  li {
    scroll-snap-align: center;
    display: inline-block;
    border-radius: 3px;
    font-size: 0;
  }
</style>

<script src="./carouselMove.js"></script>
